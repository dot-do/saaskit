{
  "name": "saaskit",
  "version": "0.1.0",
  "description": "Full-stack SaaS admin framework with dotdo primitives and TanStack ecosystem",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "author": "MDX.org.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/ui.git",
    "directory": "packages/saaskit"
  },
  "homepage": "https://mdxui.dev",
  "bugs": {
    "url": "https://github.com/dot-do/ui/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "saas",
    "admin",
    "dashboard",
    "dotdo",
    "tanstack",
    "react",
    "typescript",
    "durable-objects"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint src/",
    "lint:fix": "npx eslint src/ --fix",
    "prepublishOnly": "pnpm typecheck && pnpm test && pnpm build",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "devDependencies": {
    "@mdxui/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.0.4",
    "eslint": "^9.39.2",
    "jsdom": "^26.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@mdxui/do": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@mdxui/do": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@dotdo/client": "^0.3.0",
    "@dotdo/react": "^1.0.0"
  }
}
